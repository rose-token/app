# Signer private key (generate fresh, fund minimally, defaults to PRIVATE_KEY if not set)
SIGNER_PRIVATE_KEY=0x...

# Gitcoin Passport API
VITE_GITCOIN_SCORER_ID=your_scorer_id
VITE_GITCOIN_API_KEY=your_api_key

# Score thresholds (human-readable, e.g., 20 = 20.0)
THRESHOLD_CREATE_TASK=20
THRESHOLD_STAKE=20
THRESHOLD_CLAIM=20

# Signature expiry (seconds, default 1 hour)
SIGNATURE_TTL=3600

# Server
PORT=3000
ALLOWED_ORIGINS=https://emmadorably.github.io,http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Database (PostgreSQL)
# SECURITY: POSTGRES_PASSWORD is REQUIRED - scram-sha-256 auth enforced
DATABASE_URL=postgresql://rose:password@localhost:5432/rose
POSTGRES_USER=rose
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=rose

# Profile settings (EIP-712 signing)
PROFILE_CHAIN_IDS=42161,421614      # Allowed chainIds (comma-separated): Arbitrum mainnet + Sepolia
PROFILE_TIMESTAMP_TTL=300           # Signature validity in seconds (default 5 min)

# Contract addresses (set by CI/CD or manually)
RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
GOVERNANCE_ADDRESS=0x...
REPUTATION_ADDRESS=0x...
TREASURY_ADDRESS=0x...
MARKETPLACE_ADDRESS=0x...
