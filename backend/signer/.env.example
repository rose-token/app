# Signer private key (generate fresh, fund minimally, defaults to PRIVATE_KEY if not set)
SIGNER_PRIVATE_KEY=0x...

# Gitcoin Passport API
GITCOIN_SCORER_ID=your_scorer_id
GITCOIN_API_KEY=your_api_key

# Score thresholds (human-readable, e.g., 20 = 20.0)
THRESHOLD_CREATE_TASK=20
THRESHOLD_STAKE=20
THRESHOLD_CLAIM=20

# Signature expiry (seconds, default 1 hour)
SIGNATURE_TTL=3600

# Server
PORT=3000
ALLOWED_ORIGINS=https://emmadorably.github.io,http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30
